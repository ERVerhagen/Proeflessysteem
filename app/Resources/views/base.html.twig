<body>
{#Admin Check#}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <nav class="navbar navbar-default">
        <div class="container-fluid">
                    <a href="/">Overzicht</a>
                    <a href="{{ path('locatie_index') }}">Locaties</a>
                    <a href="{{ path('inschrijving_index') }}">Studenten</a>
                    <a href="{{ path('lessen_index') }}">Lessen</a>
                    <a href="{{ path('user_index') }}">Leraren</a>
                    <a href="{{ path('fos_user_registration_register') }}">Leraar aanmaken</a>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="{{ path('fos_user_security_logout') }}">
                        <i class="fas fa-sign-out-alt logouticon"></i>Uitloggen</a>
                </li>
            </ul>
        </div>
    </nav>
{% endif %}


{% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
        <div class="{{ type }}">
            {{ message|trans({}, 'FOSUserBundle') }}
        </div>
    {% endfor %}
{% endfor %}
{% block body %}{% endblock %}
{% block fos_user_content %}{% endblock %}

<script src="https://code.jquery.com/jquery-3.1.1.min.js"
        integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

{% block javascripts %}{% endblock %}


</body>
</html>