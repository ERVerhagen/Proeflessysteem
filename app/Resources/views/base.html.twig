<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('bundles/proefles/css/main.css') }}">
    <style>
        @import url(http://fonts.googleapis.com/css?family=Roboto);
    </style>
</head>
<body>
{#Admin Check#}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="/">Inschrijvingen</a>
                </li>
                <li>
                    <a href="{{ path('locations_index') }}">Locaties</a>
                </li>
                <li>
                    <a href="{{ path('students_index') }}">Studenten</a>
                </li>
                <li>
                    <a href="{{ path('lessons_index') }}">Lessen</a>
                </li>
                <li>
                    <a href="/">Leraren</a>
                </li>

                {% else %}
                    <li>
                        <a href="{{ path('lessons_index') }}">Lessenoverzicht</a>
                    </li>
                {% endif %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">Hallo {{ app.user | capitalize }}

                        <span class="caret"></span></a>
                    <ul class="dropdown-menu">

                        {% if is_granted('ROLE_ADMIN') %}
                            <li>
                                <a href="/register">Leraar aanmaken</a>
                            </li>
                            <li role="separator" class="divider">
                            </li>
                        {% endif %}
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="{{ path('fos_user_security_logout') }}">Uitloggen</a>
                </li>
            </ul>
        </div>
    </nav>
{% endif %}


{% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
        <div class="{{ type }}">
            {{ message|trans({}, 'FOSUserBundle') }}
        </div>
    {% endfor %}
{% endfor %}
{% block body %}{% endblock %}
{% block fos_user_content %}{% endblock %}

<script src="https://code.jquery.com/jquery-3.1.1.min.js"
        integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

{% block javascripts %}{% endblock %}


</body>
</html>