{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lessen</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lessen.id }}</td>
            </tr>
            <tr>
                <th>Weekdag</th>
                <td>{{ lessen.weekdag }}</td>
            </tr>
            <tr>
                <th>Begintijd</th>
                <td>{% if lessen.begintijd %}{{ lessen.begintijd|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Eindtijd</th>
                <td>{% if lessen.eindtijd %}{{ lessen.eindtijd|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Startdatum</th>
                <td>{% if lessen.startdatum %}{{ lessen.startdatum|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Einddatum</th>
                <td>{% if lessen.einddatum %}{{ lessen.einddatum|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ lessen.info }}</td>
            </tr>
            <tr>
                <th>Actief</th>
                <td>{{ lessen.actief }}</td>
            </tr>
            <tr>
                <th>Leraar</th>
                <td>{{ lessen.leraarNr }}</td>
            </tr>
            <tr>
                <th>Locatie</th>
                <td>{{ lessen.locatieNr }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ lessen.categorieNr }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row centered">
        <div class="buttonsaligned">
            <a href="{{ path('lessen_index') }}">
                <button type="button" class="btn btn-warning">Back to the list</button>
            </a>
        </div>
        <div class="buttonsaligned">
            <a href="{{ path('lessen_edit', { 'id': lessen.id }) }}">
                <button type="button" class="btn btn-primary">Edit</button>
            </a>
        </div>
        <div class="buttonsaligned">
            {{ form_start(delete_form, {'attr': {'onclick': 'return confirm("Weet u zeker dat u deze record wilt verwijderen?")'}}) }}
            <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
