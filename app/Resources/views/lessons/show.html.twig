{% extends 'base.html.twig' %}

{% block body %}
        {% if is_granted('ROLE_ADMIN') %}
<h1>Lesson</h1>

    <table class="table table-sm">

        <tbody>
            <tr>
                <th scope="col">Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th scope="col">Lessontype</th>
                <td>{{ lesson.lessonType }}</td>
            </tr>
            <tr>
                <th scope="col">Lessondate</th>
                <td>{% if lesson.lessonDate %}{{ lesson.lessonDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-unstyled">
        <li>
            <a href="{{ path('lessons_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lessons_edit', { 'id': lesson.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
        {% else %}
            <h1>U dient als admin in te loggen</h1>
        {% endif %}
{% endblock %}
