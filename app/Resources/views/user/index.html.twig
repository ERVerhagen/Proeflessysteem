{% extends 'base.html.twig' %}

{% block body %}
        {% if is_granted('ROLE_ADMIN') %}
    <h1>Users list</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td> {{ user.username }}</td>
                <td> {{ user.email }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul style="list-style-type: none">
        <li>
            <a class="btn btn-success" href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
        {% else %}
            <h1>U dient als admin in te loggen</h1>
        {% endif %}
{% endblock %}
