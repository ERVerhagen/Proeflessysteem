{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Omschrijving</th>
                <td>{{ categorie.omschrijving }}</td>
            </tr>
            <tr>
                <th>Maxlessen</th>
                <td>{{ categorie.maxLessen }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row centered">
        <div class="buttonsaligned">
            <a href="{{ path('categorie_index') }}">
                <button type="button" class="btn btn-warning">Back to the list</button>
            </a>
        </div>
        <div class="buttonsaligned">
            <a href="{{ path('categorie_edit', { 'id': categorie.id }) }}">
                <button type="button" class="btn btn-primary">Edit</button>
            </a>
        </div>
        <div class="buttonsaligned">
            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
