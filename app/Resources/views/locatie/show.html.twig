{% extends 'base.html.twig' %}

{% block body %}
    <h1>Locatie</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ locatie.id }}</td>
            </tr>
            <tr>
                <th>Stad</th>
                <td>{{ locatie.stad }}</td>
            </tr>
            <tr>
                <th>Adres</th>
                <td>{{ locatie.adres }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ locatie.postcode }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ locatie.img }}</td>
            </tr>
            <tr>
                <th>Memo</th>
                <td>{{ locatie.memo }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="editform">
        <li>
            <a class="btn btn-info" href="{{ path('locatie_index') }}">Lijst weergeven</a>
        </li>
        <li>
            <a class="btn btn-success" href="{{ path('locatie_edit', { 'id': locatie.id }) }}">Bewerken</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
