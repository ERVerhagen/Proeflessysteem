{% extends 'base.html.twig' %}

{% block body %}
    <h1>Locatie</h1>

    <table class="table table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ locatie.id }}</td>
        </tr>
        <tr>
            <th>Stad</th>
            <td>{{ locatie.stad }}</td>
        </tr>
        <tr>
            <th>Adres</th>
            <td>{{ locatie.adres }}</td>
        </tr>
        <tr>
            <th>Postcode</th>
            <td>{{ locatie.postcode }}</td>
        </tr>
        <tr>
            <th>Img</th>
            <td><img src="{{ asset('uploads/images/' ~ locatie.img) }}" width="75"></td>
        </tr>
        <tr>
            <th>Memo</th>
            <td>{{ locatie.memo }}</td>
        </tr>
        </tbody>
    </table>
    <div class="row centered">
        <div class="buttonsaligned">
            <a href="{{ path('locatie_index') }}">
                <button type="button" class="btn btn-warning">Back to the list</button>
            </a>
        </div>
        <div class="buttonsaligned">
            <a href="{{ path('locatie_edit', { 'id': locatie.id }) }}">
                <button type="button" class="btn btn-primary">Edit</button>
            </a>
        </div>
        <div class="buttonsaligned">
            {{ form_start(delete_form, {'attr': {'onclick': 'return confirm("Weet u zeker dat u deze record wilt verwijderen?")'}}) }}
            <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
